<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.project.uploadController">
   <children>
        <Label text="Preview" />
        <ImageView fx:id="imageView" fitHeight="100.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true" />
      <Label text="Image Information:" />
      <Label fx:id="imageInfoLabel" />
      <HBox alignment="CENTER" spacing="20.0">
         <children>
            <Button fx:id="chooseImageButton" onAction="#chooseImageButtonClick" text="Choose Image" />
            <Button fx:id="uploadImageButton" onAction="#uploadImageButtonClick" text="Upload Image"/>
         </children>
      </HBox>
   </children>
</VBox>
